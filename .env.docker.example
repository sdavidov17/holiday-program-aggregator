# Docker PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=holiday_aggregator

# pgAdmin Configuration (optional)
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin

# Database URL for Prisma
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/holiday_aggregator?schema=public"

# PostGIS Connection (for geospatial queries)
DATABASE_URL_POSTGIS="postgresql://postgres:postgres@localhost:5432/holiday_aggregator?schema=public&sslmode=disable"