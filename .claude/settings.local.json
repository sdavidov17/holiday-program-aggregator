{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/scripts/guards/block_dangerous_rm.sh"
          },
          {
            "type": "command",
            "command": "bash .claude/scripts/guards/warn_production.sh"
          },
          {
            "type": "command",
            "command": "bash .claude/scripts/guards/block_force_push.sh"
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/scripts/guards/protect_sensitive_files.sh"
          },
          {
            "type": "command",
            "command": "bash .claude/scripts/guards/detect_hardcoded_secrets.sh"
          },
          {
            "type": "command",
            "command": "bash .claude/scripts/guards/warn_test_changes.sh"
          },
          {
            "type": "command",
            "command": "bash .claude/scripts/guards/protect_critical_files.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/scripts/post_commit_reminder.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/scripts/guards/check_tests_run.sh"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(git push:*)"
    ]
  }
}
