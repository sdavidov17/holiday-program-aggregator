{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "node scripts/setup-prisma.js && ./scripts/prepare-prod-build.sh && next build --webpack",
    "build:local": "next build",
    "dev": "next dev",
    "lint": "biome check . || exit 0",
    "lint:check": "biome check .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "start": "next start",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:ci": "jest --ci --coverage --passWithNoTests --reporters=default --reporters=jest-junit --reporters=jest-ctrf-json-reporter && node scripts/generate-test-report.js || true",
    "test:report": "node scripts/generate-test-summary.js || true",
    "test:ci:full": "npm run test:ci && npm run test:report",
    "test:integration": "jest --config jest.integration.config.js --runInBand",
    "test:integration:ci": "jest --config jest.integration.config.js --runInBand --ci --reporters=default --reporters=jest-junit",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "checkly:test": "npx checkly test",
    "checkly:deploy": "npx checkly deploy",
    "checkly:login": "npx checkly login",
    "type-check": "tsc --noEmit --skipLibCheck --project tsconfig.prod.json",
    "typecheck": "tsc --noEmit --skipLibCheck --project tsconfig.prod.json",
    "db:push": "node scripts/setup-prisma.js && prisma db push",
    "db:studio": "prisma studio",
    "db:migrate": "node scripts/setup-prisma.js && prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:seed:preview": "tsx prisma/seed.preview.ts",
    "db:seed:production": "tsx prisma/seed.production.ts",
    "db:reset": "prisma migrate reset",
    "db:test-login": "tsx prisma/test-login.ts",
    "docker:up": "docker-compose up -d postgres",
    "docker:down": "docker-compose down",
    "docker:reset": "docker-compose down -v && docker-compose up -d postgres",
    "docker:logs": "docker-compose logs -f postgres",
    "docker:shell": "docker-compose exec postgres psql -U postgres -d holiday_aggregator",
    "postinstall": "node scripts/setup-prisma.js && prisma generate"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^7.2.0",
    "@react-email/components": "^1.0.4",
    "@react-email/render": "^2.0.2",
    "@stripe/stripe-js": "^8.6.1",
    "@t3-oss/env-nextjs": "^0.13.10",
    "@tanstack/react-query": "^5.90.19",
    "@trpc/client": "^11.8.1",
    "@trpc/next": "^11.8.1",
    "@trpc/react-query": "^11.8.1",
    "@trpc/server": "^11.8.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/crypto-js": "^4.2.2",
    "bcryptjs": "^3.0.3",
    "crypto-js": "^4.2.0",
    "date-fns": "^4.1.0",
    "express-rate-limit": "^8.2.1",
    "lru-cache": "^11.2.4",
    "lucide-react": "^0.562.0",
    "micro": "^10.0.1",
    "next": "16.1.3",
    "next-auth": "^4.24.13",
    "next-pwa": "^5.6.0",
    "pg": "^8.17.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-email": "^5.2.5",
    "resend": "^6.7.0",
    "stripe": "^20.2.0",
    "superjson": "^2.2.6",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@faker-js/faker": "^10.2.0",
    "@jest/globals": "^30.2.0",
    "@playwright/test": "^1.57.0",
    "@prisma/adapter-pg": "^7.2.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.9",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@types/testing-library__jest-dom": "^6.0.0",
    "autoprefixer": "^10.4.23",
    "checkly": "^6.9.10",
    "ctrf": "^0.0.17",
    "jest": "^30.2.0",
    "jest-ctrf-json-reporter": "^0.0.10",
    "jest-environment-jsdom": "^30.2.0",
    "jest-environment-node": "^30.2.0",
    "jest-junit": "^16.0.0",
    "license-checker": "^25.0.1",
    "node-mocks-http": "^1.17.2",
    "postcss": "^8.5.6",
    "prisma": "^7.2.0",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "whatwg-fetch": "^3.6.20"
  },
  "ct3aMetadata": {
    "initVersion": "7.20.2"
  }
}
