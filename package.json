{
  "name": "holiday-program-aggregator",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "dev:web": "turbo run dev --filter=web",
    "build:web": "turbo run build --filter=web",
    "db:push": "turbo run db:push",
    "db:migrate": "turbo run db:migrate",
    "db:studio": "turbo run db:studio"
  },
  "devDependencies": {
    "turbo": "^2.5.5"
  },
  "packageManager": "pnpm@8.6.10",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/crypto-js": "^4.2.2",
    "bcryptjs": "^3.0.2",
    "crypto-js": "^4.2.0"
  },
  "bmad": {
    "version": "4.35.0",
    "expansionPacks": [
      {
        "name": "devops",
        "path": "./web-bundles/expansion-packs/bmad-infrastructure-devops",
        "enabled": true
      },
      {
        "name": "security",
        "path": "./web-bundles/expansion-packs/security",
        "enabled": true
      }
    ]
  }
}