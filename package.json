{
  "name": "holiday-program-aggregator",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "dev:web": "turbo run dev --filter=web",
    "build:web": "turbo run build --filter=web",
    "db:push": "turbo run db:push",
    "db:migrate": "turbo run db:migrate",
    "db:studio": "turbo run db:studio",
    "prepare": "husky install"
  },
  "lint-staged": {
    "apps/web/**/*.{ts,tsx,js,jsx,json,css}": [
      "pnpm --filter web biome check --apply --no-errors-on-unmatched"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.7.5"
  },
  "pnpm": {
    "overrides": {
      "glob@^10.0.0": "^10.5.0",
      "glob@^11.0.0": "^11.1.0",
      "qs": ">=6.14.1",
      "preact": ">=10.27.3",
      "hono": ">=4.11.4"
    }
  },
  "packageManager": "pnpm@8.6.10",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/crypto-js": "^4.2.2",
    "bcryptjs": "^3.0.3",
    "crypto-js": "^4.2.0",
    "resend": "^6.8.0",
    "zod": "^4.3.5"
  },
  "bmad": {
    "version": "4.35.0",
    "expansionPacks": [
      {
        "name": "devops",
        "path": "./web-bundles/expansion-packs/bmad-infrastructure-devops",
        "enabled": true
      },
      {
        "name": "security",
        "path": "./web-bundles/expansion-packs/security",
        "enabled": true
      }
    ]
  }
}